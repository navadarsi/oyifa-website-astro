---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';
import { URLS } from '../config/urls';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const isArabic = lang === 'ar';

const currentPath = Astro.url.pathname.replace(`/${lang}`, '').replace(/^\/ar/, '') || '/';
const alternateLangPath = isArabic ? currentPath : `/ar${currentPath}`;
const alternateLangLabel = isArabic ? 'English' : 'العربية';

// Logo based on language
const logoSrc = isArabic ? '/assets/images/logo_arabic.png' : '/assets/images/logo_english.png';
const logoAlt = isArabic ? 'شعار أويفا' : 'Oyifa Logo';

const currentYear = new Date().getFullYear();
---

<footer
  class="bg-white dark:bg-gray-900 py-12 border-t border-gray-200 dark:border-gray-800"
  role="contentinfo"
  aria-label={isArabic ? 'تذييل الموقع' : 'Site footer'}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid gap-8 md:grid-cols-3">
      <!-- Brand Column -->
      <div>
        <div class="mb-4">
          <a href={getLocalizedPath('/', lang)}>
            <img
              src={logoSrc}
              alt={logoAlt}
              width="120"
              height="40"
              class="object-contain h-10 w-auto"
            />
          </a>
        </div>
        <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
          {t('footer.description')}
        </p>
        <a
          href={`${URLS.app}/register`}
          class="btn btn-primary btn-sm inline-flex items-center gap-2"
          aria-label={isArabic ? 'ابدأ مع أويفا اليوم' : 'Get started with Oyifa today'}
        >
          {t('footer.get_started')}
          <svg
            class={`w-3 h-3 ${isArabic ? 'rotate-180' : ''}`}
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>

      <!-- Platform Column -->
      <div>
        <h3 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">
          {t('footer.platform')}
        </h3>
        <nav aria-label={isArabic ? 'قائمة المنصة' : 'Platform navigation'}>
          <ul class="space-y-2 text-sm">
            <li>
              <a
                href={`${URLS.app}/register/client`}
                class="text-gray-500 dark:text-gray-400 hover:text-primary transition-colors"
              >
                {t('footer.platform.post')}
              </a>
            </li>
            <li>
              <a
                href={`${URLS.app}/register/vendor`}
                class="text-gray-500 dark:text-gray-400 hover:text-primary transition-colors"
              >
                {t('footer.platform.find')}
              </a>
            </li>
            <li>
              <a
                href={getLocalizedPath('/pricing', lang)}
                class="text-gray-500 dark:text-gray-400 hover:text-primary transition-colors"
              >
                {t('footer.platform.pricing')}
              </a>
            </li>
          </ul>
        </nav>
      </div>

      <!-- Company Column -->
      <div>
        <h3 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">
          {t('footer.company')}
        </h3>
        <nav aria-label={isArabic ? 'معلومات الشركة' : 'Company information navigation'}>
          <ul class="space-y-2 text-sm">
            <li>
              <a
                href={getLocalizedPath('/about', lang)}
                class="text-gray-500 dark:text-gray-400 hover:text-primary transition-colors"
              >
                {t('footer.company.about')}
              </a>
            </li>
            <li>
              <a
                href={getLocalizedPath('/contact', lang)}
                class="text-gray-500 dark:text-gray-400 hover:text-primary transition-colors"
              >
                {t('footer.company.contact')}
              </a>
            </li>
            <li>
              <a
                href={getLocalizedPath('/faq', lang)}
                class="text-gray-500 dark:text-gray-400 hover:text-primary transition-colors"
              >
                {t('footer.company.faq')}
              </a>
            </li>
            <li>
              <a
                href={getLocalizedPath('/refund', lang)}
                class="text-gray-500 dark:text-gray-400 hover:text-primary transition-colors"
              >
                {t('footer.company.refund')}
              </a>
            </li>
            <li>
              <a
                href={getLocalizedPath('/privacy', lang)}
                class="text-gray-500 dark:text-gray-400 hover:text-primary transition-colors"
              >
                {t('footer.company.privacy')}
              </a>
            </li>
            <li>
              <a
                href={getLocalizedPath('/terms', lang)}
                class="text-gray-500 dark:text-gray-400 hover:text-primary transition-colors"
              >
                {t('footer.company.terms')}
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-sm text-gray-500 dark:text-gray-400 mb-4 md:mb-0">
          {t('footer.copyright')}
        </div>
        <div class="flex flex-col md:flex-row items-center gap-4">
          <a
            href={alternateLangPath}
            class="text-sm text-gray-500 dark:text-gray-400 hover:text-primary transition-colors"
          >
            {alternateLangLabel}
          </a>
          <address class="flex items-center text-sm text-gray-500 dark:text-gray-400 not-italic">
            <div class="flex items-center gap-1">
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <a
                href="mailto:info@oyifa.com"
                class="hover:text-primary transition-colors"
                aria-label={isArabic ? 'البريد الإلكتروني للدعم' : 'Email support'}
              >
                info@oyifa.com
              </a>
            </div>
          </address>
        </div>
      </div>
    </div>
  </div>
</footer>
