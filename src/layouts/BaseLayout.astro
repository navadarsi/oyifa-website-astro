---
import '../styles/global.css';
import Analytics from '../components/Analytics.astro';
import SchemaOrg from '../components/SchemaOrg.astro';
import { getLangFromUrl, isRTL, useTranslations, getLocalizedPath, languages } from '../i18n/utils';

interface Props {
  title: string;
  description?: string;
  schemaType?: 'homepage' | 'default';
  ogType?: 'website' | 'article';
  ogImage?: string;
  articleMeta?: {
    publishedTime: string;
    modifiedTime?: string;
    author: string;
    section?: string;
    tags?: string[];
  };
}

const { title, description = 'Oyifa is the leading IT outsourcing platform connecting businesses with qualified vendors across the Middle East.', schemaType = 'default', ogType = 'website', ogImage, articleMeta } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const rtl = isRTL(lang);
const dir = rtl ? 'rtl' : 'ltr';

// Get current path for language switcher
const currentPath = Astro.url.pathname.replace(`/${lang}`, '') || '/';

// Alternate language URLs for SEO
const alternateUrls = Object.keys(languages).map((l) => ({
  lang: l,
  url: `https://oyifa.com${getLocalizedPath(currentPath, l as keyof typeof languages)}`,
}));
---

<!DOCTYPE html>
<html lang={lang} dir={dir} class={rtl ? 'rtl' : 'ltr'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Oyifa</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <link rel="canonical" href={Astro.url.href} />

    <!-- AI Engine Optimization (AEO) -->
    <link rel="author" href="https://oyifa.com/llm.txt" type="text/plain" title="LLM Information" />

    <!-- hreflang tags for SEO -->
    {alternateUrls.map(({ lang, url }) => (
      <link rel="alternate" hreflang={lang} href={url} />
    ))}
    <link rel="alternate" hreflang="x-default" href={`https://oyifa.com${currentPath}`} />

    <!-- Open Graph -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={`${title} | Oyifa`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage || "https://oyifa.com/og-image.png"} />
    <meta property="og:locale" content={lang === 'ar' ? 'ar_SA' : 'en_US'} />
    {articleMeta && (
      <>
        <meta property="article:published_time" content={articleMeta.publishedTime} />
        {articleMeta.modifiedTime && <meta property="article:modified_time" content={articleMeta.modifiedTime} />}
        <meta property="article:author" content={articleMeta.author} />
        {articleMeta.section && <meta property="article:section" content={articleMeta.section} />}
        {articleMeta.tags?.map(tag => <meta property="article:tag" content={tag} />)}
      </>
    )}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Oyifa`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage || "https://oyifa.com/og-image.png"} />

    <!-- Favicons - matching app assets -->
    <link rel="icon" type="image/svg+xml" href="/assets/images/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="96x96" href="/assets/images/favicon-96x96.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/apple-touch-icon.png" />
    <link rel="manifest" href="/assets/images/site.webmanifest" />
    <meta name="theme-color" content="#271060" />

    <!-- Google Fonts - Cairo for all pages (matching app), Inter as fallback -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;500;600;700;800&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- lite-youtube-embed (loads YouTube iframe only on click) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lite-youtube-embed@0.3.3/src/lite-yt-embed.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/lite-youtube-embed@0.3.3/src/lite-yt-embed.min.js"></script>

    <!-- Analytics -->
    <Analytics />

    <!-- Schema.org Structured Data -->
    <SchemaOrg type={schemaType} />
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <slot />
  </body>
</html>
