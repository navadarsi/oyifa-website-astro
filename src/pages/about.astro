---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { useTranslations } from '../i18n/utils';
import { URLS } from '../config/urls';

const t = useTranslations('en');
---

<BaseLayout
  title={t('about.meta.title')}
  description={t('about.meta.desc')}
>
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary/10 via-white to-purple-100/10 py-32">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <span class="inline-flex items-center mb-6 px-3 py-1 bg-purple-100 text-primary rounded-md text-sm font-medium">
          {t('about.hero.badge')}
        </span>
        <h1 class="mb-6 text-5xl md:text-6xl font-extrabold tracking-tight text-gray-900">
          {t('about.hero.title.part1')}{" "}
          <span class="text-primary">{t('about.hero.title.highlight')}</span>
        </h1>
        <p class="mx-auto mb-8 max-w-4xl text-xl text-gray-500">
          {t('about.hero.desc')}
        </p>
        <div class="mb-8 text-lg text-gray-500 max-w-3xl mx-auto">
          <p>
            {t('about.hero.inspiration')}
          </p>
        </div>
        <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
          <a href="/contact" class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-primary text-white font-medium rounded-md hover:bg-primary/90 transition-colors">
            {t('about.hero.cta.contact')}
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a href={`${URLS.app}/register`} class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-md hover:bg-gray-50 transition-colors">
            {t('about.hero.cta.join')}
          </a>
        </div>
      </div>
    </section>

    <!-- Our Story Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <span class="inline-flex items-center mb-4 px-3 py-1 border border-gray-300 text-gray-600 rounded-md text-sm font-medium">
              {t('about.story.badge')}
            </span>
            <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900">
              {t('about.story.title')}
            </h2>
          </div>

          <div class="space-y-8">
            <!-- The Problem Card -->
            <div class="bg-white rounded-md border border-gray-200 shadow-sm">
              <div class="p-6">
                <div class="flex items-start gap-4 mb-4">
                  <div class="w-12 h-12 bg-red-100 rounded-md flex items-center justify-center flex-shrink-0">
                    <svg class="h-6 w-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <circle cx="12" cy="12" r="10" stroke-width="2"></circle>
                      <line x1="12" y1="8" x2="12" y2="12" stroke-width="2" stroke-linecap="round"></line>
                      <circle cx="12" cy="16" r="1" fill="currentColor"></circle>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold mb-2 text-gray-900">
                      {t('about.story.problem.title')}
                    </h3>
                  </div>
                </div>
                <p class="text-gray-500 mb-4 text-lg">
                  {t('about.story.problem.desc')}
                </p>
                <p class="text-gray-500 font-medium">
                  {t('about.story.problem.conclusion')}
                </p>
              </div>
            </div>

            <!-- Backing Card -->
            <div class="bg-white rounded-md border border-gray-200 shadow-sm">
              <div class="p-6">
                <div class="flex items-start gap-4 mb-4">
                  <div class="w-12 h-12 bg-primary/10 rounded-md flex items-center justify-center flex-shrink-0">
                    <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold mb-2 text-gray-900">
                      {t('about.story.backing.title')}
                    </h3>
                  </div>
                </div>
                <p class="text-gray-500 mb-4">
                  {t('about.story.backing.desc')}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Mission Section -->
    <section class="bg-primary/5 py-20">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid gap-12 lg:grid-cols-2 items-center max-w-6xl mx-auto">
          <div>
            <span class="inline-flex items-center mb-4 px-3 py-1 border border-gray-300 text-gray-600 rounded-md text-sm font-medium">
              {t('about.mission.badge')}
            </span>
            <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900">
              {t('about.mission.title')}
            </h2>
            <p class="text-gray-500 mb-6 text-lg">
              {t('about.mission.desc')}
            </p>
            <div class="space-y-3">
              <div class="flex items-center gap-3">
                <svg class="h-5 w-5 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-gray-700">{t('about.mission.vetting')}</span>
              </div>
              <div class="flex items-center gap-3">
                <svg class="h-5 w-5 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-gray-700">{t('about.mission.local')}</span>
              </div>
              <div class="flex items-center gap-3">
                <svg class="h-5 w-5 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-gray-700">{t('about.mission.secure')}</span>
              </div>
              <div class="flex items-center gap-3">
                <svg class="h-5 w-5 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-gray-700">{t('about.mission.growth')}</span>
              </div>
            </div>
          </div>
          <div class="relative">
            <div class="bg-gradient-to-br from-primary/20 to-purple-200/20 rounded-2xl p-8 h-96 flex items-center justify-center">
              <div class="text-center">
                <div class="w-24 h-24 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="h-12 w-12 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                  </svg>
                </div>
                <h4 class="font-semibold text-lg mb-2 text-gray-900">
                  {t('about.mission.pledge.title')}
                </h4>
                <p class="text-gray-500">
                  {t('about.mission.pledge.desc')}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-12">
          <span class="inline-flex items-center mb-4 px-3 py-1 border border-gray-300 text-gray-600 rounded-md text-sm font-medium">
            {t('about.values.badge')}
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900">
            {t('about.values.title')}
          </h2>
          <p class="mx-auto max-w-3xl text-xl text-gray-500">
            {t('about.values.desc')}
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4 max-w-6xl mx-auto">
          <!-- Honesty -->
          <div class="text-center bg-white rounded-md border border-gray-200 shadow-sm hover:shadow-lg transition-shadow">
            <div class="p-6">
              <div class="mb-4 mx-auto w-16 h-16 bg-primary/10 rounded-md flex items-center justify-center">
                <svg class="h-8 w-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-gray-900">{t('about.values.honesty.title')}</h3>
              <p class="text-gray-500">{t('about.values.honesty.desc')}</p>
            </div>
          </div>

          <!-- Simplicity -->
          <div class="text-center bg-white rounded-md border border-gray-200 shadow-sm hover:shadow-lg transition-shadow">
            <div class="p-6">
              <div class="mb-4 mx-auto w-16 h-16 bg-primary/10 rounded-md flex items-center justify-center">
                <svg class="h-8 w-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-gray-900">{t('about.values.simplicity.title')}</h3>
              <p class="text-gray-500">{t('about.values.simplicity.desc')}</p>
            </div>
          </div>

          <!-- Regional Strength -->
          <div class="text-center bg-white rounded-md border border-gray-200 shadow-sm hover:shadow-lg transition-shadow">
            <div class="p-6">
              <div class="mb-4 mx-auto w-16 h-16 bg-primary/10 rounded-md flex items-center justify-center">
                <svg class="h-8 w-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-gray-900">{t('about.values.regional.title')}</h3>
              <p class="text-gray-500">{t('about.values.regional.desc')}</p>
            </div>
          </div>

          <!-- Integrity -->
          <div class="text-center bg-white rounded-md border border-gray-200 shadow-sm hover:shadow-lg transition-shadow">
            <div class="p-6">
              <div class="mb-4 mx-auto w-16 h-16 bg-primary/10 rounded-md flex items-center justify-center">
                <svg class="h-8 w-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-gray-900">{t('about.values.integrity.title')}</h3>
              <p class="text-gray-500">{t('about.values.integrity.desc')}</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="bg-purple-50/50 py-20">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-12">
          <span class="inline-flex items-center mb-4 px-3 py-1 border border-gray-300 text-gray-600 rounded-md text-sm font-medium">
            {t('about.team.badge')}
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900">
            {t('about.team.title')}
          </h2>
        </div>

        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <!-- Regional Expertise -->
          <div class="bg-white rounded-md border border-gray-200 shadow-sm">
            <div class="p-6">
              <div class="flex items-start gap-4 mb-4">
                <div class="w-12 h-12 bg-primary/10 rounded-md flex items-center justify-center flex-shrink-0">
                  <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold mb-2 text-gray-900">
                    {t('about.team.regional.title')}
                  </h3>
                </div>
              </div>
              <p class="text-gray-500">
                {t('about.team.regional.desc')}
              </p>
            </div>
          </div>

          <!-- Global Standards -->
          <div class="bg-white rounded-md border border-gray-200 shadow-sm">
            <div class="p-6">
              <div class="flex items-start gap-4 mb-4">
                <div class="w-12 h-12 bg-primary/10 rounded-md flex items-center justify-center flex-shrink-0">
                  <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold mb-2 text-gray-900">
                    {t('about.team.global.title')}
                  </h3>
                </div>
              </div>
              <p class="text-gray-500">
                {t('about.team.global.desc')}
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <span class="inline-flex items-center mb-6 px-3 py-1 bg-purple-100 text-primary rounded-md text-sm font-medium">
          {t('about.cta.badge')}
        </span>
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900">
          {t('about.cta.title')}
        </h2>
        <p class="mx-auto mb-8 max-w-3xl text-xl text-gray-500">
          {t('about.cta.desc')}
        </p>

        <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
          <a href={`${URLS.app}/register`} class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-primary text-white font-medium rounded-md hover:bg-primary/90 transition-colors">
            {t('about.cta.register')}
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-md hover:bg-gray-50 transition-colors">
            {t('about.cta.contact')}
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
