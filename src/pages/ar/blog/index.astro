---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { useTranslations } from '../../../i18n/utils';
import { getAllPosts, getAllCategories, getLocalizedText, type Post, type Category } from '../../../lib/sanity';
import { URLS } from '../../../config/urls';

const t = useTranslations('ar');
const lang = 'ar';

let posts: Post[] = [];
let categories: Category[] = [];
try {
  [posts, categories] = await Promise.all([
    getAllPosts(),
    getAllCategories()
  ]);
} catch (error) {
  console.error('Failed to fetch data:', error);
}

function formatDate(dateString: string): string {
  return new Date(dateString).toLocaleDateString('ar-SA', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

// Calculate article count for stats
const articleCount = posts.length > 0 ? `+${posts.length}` : '+10';

// CollectionPage Schema for SEO
const blogCollectionSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "url": "https://oyifa.com/ar/blog",
  "name": "مدونة أويفا",
  "description": "اقرأ أحدث الرؤى حول الاستعانة بمصادر خارجية لتقنية المعلومات في الشرق الأوسط.",
  "inLanguage": "ar-SA",
  "isPartOf": { "@type": "WebSite", "@id": "https://oyifa.com/#website" },
  "hasPart": posts.slice(0, 10).map((post) => ({
    "@type": "BlogPosting",
    "headline": getLocalizedText(post.title, lang),
    "url": `https://oyifa.com/ar/blog/${post.slug.current}`,
    "datePublished": post.publishedAt
  }))
};
---

<BaseLayout title={t('blog.title')} description="اقرأ أحدث الرؤى والتحديثات والمقالات من فريق أويفا حول الاستعانة بمصادر خارجية لتقنية المعلومات في الشرق الأوسط.">
  <Header />

  <script type="application/ld+json" set:html={JSON.stringify(blogCollectionSchema)}></script>

  <main class="flex-1" dir="rtl">
    <!-- Enhanced Hero Section -->
    <section class="relative overflow-hidden bg-gradient-to-bl from-primary/5 via-white to-secondary/5 pt-32 pb-20">
      <!-- Background decorative elements -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-40 -left-40 h-80 w-80 rounded-full bg-primary/10 blur-3xl"></div>
        <div class="absolute -bottom-40 -right-40 h-80 w-80 rounded-full bg-secondary/10 blur-3xl"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 relative">
        <div class="max-w-4xl mx-auto text-center">
          <!-- Badge -->
          <span class="inline-flex mb-6 px-4 py-2 bg-secondary/10 text-primary rounded-full text-sm font-medium">
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
            {t('blog.badge')}
          </span>

          <!-- Main Headline -->
          <h1 class="mb-6 text-4xl md:text-5xl lg:text-6xl font-extrabold tracking-tight text-gray-900">
            {t('blog.heroTitle')}
          </h1>

          <!-- Subtitle -->
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            {t('blog.subtitle')}
          </p>

          <!-- Stats Row -->
          <div class="flex flex-wrap justify-center gap-8 mb-10">
            <div class="flex items-center gap-2">
              <div class="w-10 h-10 bg-primary/10 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <div class="text-right">
                <p class="text-2xl font-bold text-gray-900">{articleCount}</p>
                <p class="text-sm text-gray-500">{t('blog.stats.articles')}</p>
              </div>
            </div>

            <div class="flex items-center gap-2">
              <div class="w-10 h-10 bg-primary/10 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="text-right">
                <p class="text-2xl font-bold text-gray-900">أسبوعية</p>
                <p class="text-sm text-gray-500">{t('blog.stats.weeklyUpdates')}</p>
              </div>
            </div>

            <div class="flex items-center gap-2">
              <div class="w-10 h-10 bg-primary/10 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
              <div class="text-right">
                <p class="text-2xl font-bold text-gray-900">الخليج</p>
                <p class="text-sm text-gray-500">{t('blog.stats.expertInsights')}</p>
              </div>
            </div>
          </div>

          <!-- Category Filter Chips -->
          <div class="flex flex-wrap justify-center gap-3">
            <button class="px-4 py-2 bg-primary text-white rounded-md text-sm font-medium hover:bg-primary/90 transition-colors" data-filter="all">
              {t('blog.filter.all')}
            </button>
            {categories.map((category) => (
              <button
                class="px-4 py-2 bg-white text-gray-700 border border-gray-200 rounded-md text-sm font-medium hover:bg-gray-50 hover:border-gray-300 transition-colors"
                data-filter={category.slug.current}
                data-category-id={category._id}
              >
                {getLocalizedText(category.title, lang)}
              </button>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Blog Posts -->
    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        {posts.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="posts-container">
            {posts.map((post) => (
              <article
                class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow group post-item"
                data-categories={post.categories?.map(c => c._id).join(',')}
              >
                {post.mainImage?.asset?.url && (
                  <a href={`/ar/blog/${post.slug.current}`} class="block aspect-video overflow-hidden">
                    <img
                      src={post.mainImage.asset.url}
                      alt={getLocalizedText(post.mainImage.alt, lang) || getLocalizedText(post.title, lang)}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </a>
                )}
                <div class="p-6">
                  {post.categories && post.categories.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-3">
                      {post.categories.map((category) => (
                        <span
                          class="text-xs font-medium px-2 py-1 rounded-md"
                          style={category.color ? `background-color: ${category.color}20; color: ${category.color}` : 'background-color: #8B5CF620; color: #8B5CF6'}
                        >
                          {getLocalizedText(category.title, lang)}
                        </span>
                      ))}
                    </div>
                  )}
                  <h2 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-primary transition-colors">
                    <a href={`/ar/blog/${post.slug.current}`}>
                      {getLocalizedText(post.title, lang)}
                    </a>
                  </h2>
                  {post.excerpt && (
                    <p class="text-gray-600 mb-4 line-clamp-2">
                      {getLocalizedText(post.excerpt, lang)}
                    </p>
                  )}
                  <div class="flex items-center justify-between text-sm text-gray-500">
                    <div class="flex items-center gap-2">
                      {post.author?.image?.asset?.url && (
                        <img
                          src={post.author.image.asset.url}
                          alt={getLocalizedText(post.author.name, lang)}
                          class="w-6 h-6 rounded-full object-cover"
                        />
                      )}
                      <span>{post.author ? getLocalizedText(post.author.name, lang) : 'فريق أويفا'}</span>
                    </div>
                    <time datetime={post.publishedAt}>
                      {formatDate(post.publishedAt)}
                    </time>
                  </div>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
            </div>
            <p class="text-gray-600 text-lg">{t('blog.noPosts')}</p>
          </div>
        )}
      </div>
    </section>

    <!-- Newsletter Subscription Section -->
    <section class="py-20 px-4 bg-gradient-to-bl from-primary/5 via-white to-secondary/5">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
          <div class="grid md:grid-cols-2">
            <!-- Right side - Content (appears first in RTL) -->
            <div class="p-8 md:p-12 order-1 md:order-2">
              <span class="inline-flex mb-4 px-3 py-1 bg-primary/10 text-primary rounded-md text-sm font-medium">
                {t('blog.newsletter.badge')}
              </span>
              <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
                {t('blog.newsletter.title')}
              </h2>
              <p class="text-gray-600 mb-6">
                {t('blog.newsletter.description')}
              </p>

              <!-- Benefits list -->
              <ul class="space-y-3 mb-6">
                <li class="flex items-center gap-3 text-sm text-gray-600">
                  <div class="w-5 h-5 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-3 h-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  {t('blog.newsletter.benefit1')}
                </li>
                <li class="flex items-center gap-3 text-sm text-gray-600">
                  <div class="w-5 h-5 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-3 h-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  {t('blog.newsletter.benefit2')}
                </li>
                <li class="flex items-center gap-3 text-sm text-gray-600">
                  <div class="w-5 h-5 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-3 h-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  {t('blog.newsletter.benefit3')}
                </li>
              </ul>
            </div>

            <!-- Left side - Form (appears second in RTL) -->
            <div class="bg-gradient-to-bl from-primary to-primary/80 p-8 md:p-12 flex flex-col justify-center order-2 md:order-1">
              <form class="space-y-4" id="newsletter-form">
                <div>
                  <label for="email" class="sr-only">البريد الإلكتروني</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    placeholder={t('blog.newsletter.emailPlaceholder')}
                    class="w-full px-4 py-3 rounded-md border-0 bg-white/10 text-white placeholder-white/70 focus:ring-2 focus:ring-white/50 focus:outline-none text-right"
                  />
                </div>
                <button
                  type="submit"
                  class="w-full px-6 py-3 bg-white text-primary font-semibold rounded-md hover:bg-gray-100 transition-colors flex items-center justify-center gap-2"
                >
                  <svg class="w-4 h-4 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                  {t('blog.newsletter.subscribe')}
                </button>
              </form>
              <p class="text-white/70 text-xs mt-4 text-center">
                <svg class="w-4 h-4 inline-block ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
                {t('blog.newsletter.privacy')}
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  // Filter functionality
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('[data-filter]');
    const posts = document.querySelectorAll('.post-item');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active state from all buttons
        filterButtons.forEach(btn => {
          btn.classList.remove('bg-primary', 'text-white', 'hover:bg-primary/90');
          btn.classList.add('bg-white', 'text-gray-700', 'border', 'border-gray-200', 'hover:bg-gray-50', 'hover:border-gray-300');
        });

        // Add active state to clicked button
        button.classList.remove('bg-white', 'text-gray-700', 'border', 'border-gray-200', 'hover:bg-gray-50', 'hover:border-gray-300');
        button.classList.add('bg-primary', 'text-white', 'hover:bg-primary/90');

        // Filter posts by category
        const filter = button.getAttribute('data-filter');
        const categoryId = button.getAttribute('data-category-id');

        posts.forEach(post => {
          if (filter === 'all') {
            post.style.display = 'block';
          } else {
            const postCategories = post.getAttribute('data-categories')?.split(',') || [];
            if (categoryId && postCategories.includes(categoryId)) {
              post.style.display = 'block';
            } else {
              post.style.display = 'none';
            }
          }
        });
      });
    });

    // Newsletter form handling
    const newsletterForm = document.getElementById('newsletter-form');
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', (e) => {
        e.preventDefault();
        const email = newsletterForm.querySelector('input[type="email"]')?.value;
        if (email) {
          // TODO: Implement newsletter subscription
          console.log('Newsletter subscription:', email);
          alert('شكراً لاشتراكك! ستتلقى آخر التحديثات.');
        }
      });
    }
  });
</script>
