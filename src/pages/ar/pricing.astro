---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PricingSchema from '../../components/PricingSchema.astro';
import { useTranslations } from '../../i18n/utils';
import { URLS } from '../../config/urls';

const t = useTranslations('ar');

// GCC Countries with their currencies and Arabic names
const gccCountries = [
  { code: 'AE', name: 'الإمارات العربية المتحدة', currency: 'AED', symbol: 'د.إ' },
  { code: 'SA', name: 'المملكة العربية السعودية', currency: 'SAR', symbol: 'ر.س' },
  { code: 'QA', name: 'قطر', currency: 'QAR', symbol: 'ر.ق' },
  { code: 'KW', name: 'الكويت', currency: 'KWD', symbol: 'د.ك' },
  { code: 'BH', name: 'البحرين', currency: 'BHD', symbol: 'د.ب' },
  { code: 'OM', name: 'عمان', currency: 'OMR', symbol: 'ر.ع' },
];

// Pricing by currency (monthly and yearly)
const pricing = {
  AED: { free: { monthly: 0, yearly: 0 }, basic: { monthly: 499, yearly: 4999 }, standard: { monthly: 999, yearly: 9999 }, premium: { monthly: 1499, yearly: 14999 } },
  SAR: { free: { monthly: 0, yearly: 0 }, basic: { monthly: 499, yearly: 4999 }, standard: { monthly: 999, yearly: 9999 }, premium: { monthly: 1499, yearly: 14999 } },
  QAR: { free: { monthly: 0, yearly: 0 }, basic: { monthly: 499, yearly: 4999 }, standard: { monthly: 999, yearly: 9999 }, premium: { monthly: 1499, yearly: 14999 } },
  KWD: { free: { monthly: 0, yearly: 0 }, basic: { monthly: 49, yearly: 499 }, standard: { monthly: 99, yearly: 999 }, premium: { monthly: 149, yearly: 1499 } },
  BHD: { free: { monthly: 0, yearly: 0 }, basic: { monthly: 49, yearly: 499 }, standard: { monthly: 99, yearly: 999 }, premium: { monthly: 149, yearly: 1499 } },
  OMR: { free: { monthly: 0, yearly: 0 }, basic: { monthly: 49, yearly: 499 }, standard: { monthly: 99, yearly: 999 }, premium: { monthly: 149, yearly: 1499 } },
};

const defaultCountry = gccCountries[0];
const defaultPricing = pricing.AED;

// Plan features in Arabic
const plans = [
  {
    id: 'free',
    tier: 'free',
    name: 'مجاني',
    description: 'مثالي لاستكشاف المنصة',
    monthlyPrice: 0,
    yearlyPrice: 0,
    features: [
      'تصفح جميع المناقصات',
      'ملف شركة أساسي',
      'إشعارات البريد الإلكتروني',
      'دعم المجتمع',
    ],
    cta: 'ابدأ مجاناً',
    popular: false,
  },
  {
    id: 'basic',
    tier: 'basic',
    name: 'أساسي',
    description: 'رائع للشركات الصغيرة',
    monthlyPrice: defaultPricing.basic.monthly,
    yearlyPrice: defaultPricing.basic.yearly,
    features: [
      '10 عروض شهرياً',
      'ملف شركة محسّن',
      'عرض المناقصات حتى 100 ألف د.إ',
      'دعم البريد والدردشة',
      'تحليلات أساسية',
    ],
    cta: 'ابدأ الآن',
    popular: false,
  },
  {
    id: 'standard',
    tier: 'standard',
    name: 'قياسي',
    description: 'الأفضل للفرق النامية',
    monthlyPrice: defaultPricing.standard.monthly,
    yearlyPrice: defaultPricing.standard.yearly,
    features: [
      '50 عرضاً شهرياً',
      'ملف شركة مميز',
      'عرض المناقصات حتى 500 ألف د.إ',
      'دعم ذو أولوية',
      'تحليلات متقدمة',
      'وصول API',
    ],
    cta: 'ابدأ الآن',
    popular: true,
  },
  {
    id: 'premium',
    tier: 'premium',
    name: 'متميز',
    description: 'للاحتياجات على مستوى المؤسسات',
    monthlyPrice: defaultPricing.premium.monthly,
    yearlyPrice: defaultPricing.premium.yearly,
    features: [
      'عروض غير محدودة',
      'شارة ملف متميز',
      'عرض المناقصات بدون حدود',
      'مدير حساب مخصص',
      'تكاملات مخصصة',
      'إعداد متميز',
      'ضمان SLA',
    ],
    cta: 'ابدأ الآن',
    popular: false,
  },
];

const features = [
  t('pricing.features.no_fees'),
  t('pricing.features.money_back'),
  t('pricing.features.ssl'),
  t('pricing.features.support'),
  t('pricing.features.updates'),
];
---

<BaseLayout
  title={t('pricing.meta.title')}
  description={t('pricing.meta.desc')}
  lang="ar"
>
  <!-- Pricing Schema for SEO -->
  <PricingSchema />

  <Header />

  <main class="flex-1" dir="rtl">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-purple-100 via-white to-purple-50 pt-32 pb-12">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <span class="inline-block mb-4 px-4 py-2 bg-purple-100 text-primary rounded-full text-sm font-medium">
          {t('pricing.hero.badge')}
        </span>
        <h1 class="mb-6 text-4xl md:text-5xl lg:text-6xl font-extrabold tracking-tight text-gray-900">
          {t('pricing.hero.title.simple')} <span class="text-primary">{t('pricing.hero.title.transparent')}</span> {t('pricing.hero.title.pricing')}
        </h1>
        <p class="mx-auto mb-8 max-w-3xl text-xl text-gray-600">
          {t('pricing.hero.desc')}
        </p>

        <!-- Free Tier Banner -->
        <div class="mb-8">
          <div class="bg-gradient-to-r from-purple-50 via-purple-100 to-purple-50 border border-purple-200 rounded-xl p-6 max-w-4xl mx-auto">
            <div class="flex flex-col md:flex-row items-center justify-between gap-4">
              <div class="flex items-center gap-4 text-center md:text-right">
                <div class="hidden md:flex h-12 w-12 items-center justify-center rounded-full bg-purple-100">
                  <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-bold mb-1 text-gray-900">
                    {t('pricing.free_banner.title')}
                  </h3>
                  <p class="text-sm text-gray-600">
                    {t('pricing.free_banner.subtitle')}
                  </p>
                </div>
              </div>
              <a href={`${URLS.app}/register/vendor`} class="inline-flex items-center gap-2 bg-primary text-white px-6 py-3 rounded-md font-semibold hover:bg-primary-light transition-colors whitespace-nowrap">
                {t('pricing.free_banner.cta')}
                <svg class="h-4 w-4 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Location Selector -->
        <div class="flex flex-col items-center gap-4 mb-8">
          <div class="flex items-center gap-2 text-sm text-gray-500">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{t('pricing.location.label')}</span>
          </div>
          <select
            id="countrySelect"
            class="w-64 px-4 py-2 border border-gray-300 rounded-md bg-white text-gray-900 font-medium focus:ring-2 focus:ring-primary focus:border-transparent"
            dir="rtl"
          >
            {gccCountries.map((country) => (
              <option value={country.currency} data-symbol={country.symbol}>
                {country.name} ({country.symbol})
              </option>
            ))}
          </select>
        </div>

        <!-- Billing Toggle -->
        <div class="flex justify-center mb-10">
          <span class="ml-3 font-semibold text-gray-900">
            الفوترة السنوية <span class="text-primary">— ادفع 10 واحصل على شهرين مجاناً!</span>
          </span>
          <label class="relative inline-flex items-center cursor-pointer mr-3">
            <input type="checkbox" id="billingToggle" class="sr-only peer" />
            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/20 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
          </label>
        </div>

        <!-- Pricing Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
          {plans.map((plan, index) => (
            <div class={`rounded-2xl p-6 text-center flex flex-col relative transition-shadow duration-200 hover:shadow-lg ${
              plan.popular
                ? 'border-0 shadow-lg bg-gradient-to-br from-[#271060] via-[#595cff] to-[#52a8f2] text-white'
                : 'border border-gray-200 bg-white'
            }`}>
              {/* Background decoration for popular plan */}
              {plan.popular && (
                <>
                  <div class="absolute top-0 left-0 -mt-4 -ml-4 h-24 w-24 rounded-full bg-white/10 blur-2xl"></div>
                  <div class="absolute bottom-0 right-0 -mb-4 -mr-4 h-20 w-20 rounded-full bg-[#5682f9]/30 blur-xl"></div>
                </>
              )}
              {plan.popular && (
                <div class="absolute top-0 left-0 bg-white/20 backdrop-blur-sm py-0.5 px-2 rounded-br-xl rounded-tl-xl flex items-center">
                  <svg class="text-white h-4 w-4 fill-current" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                  </svg>
                  <span class="text-white mr-1 font-semibold text-sm">الأكثر شعبية</span>
                </div>
              )}
              <div class="flex-1 flex flex-col relative z-10">
                <p class={`text-base font-semibold uppercase ${plan.popular ? 'text-white/80' : 'text-gray-500'}`}>
                  {plan.name}
                </p>
                <div class="mt-6 flex items-center justify-center gap-x-2">
                  <span
                    class={`price text-5xl font-bold tracking-tight ${plan.popular ? 'text-white' : 'text-gray-900'}`}
                    data-plan={plan.tier}
                    data-monthly={plan.monthlyPrice}
                    data-yearly={plan.yearlyPrice}
                  >
                    {plan.monthlyPrice}
                  </span>
                  <span class={`currency-symbol text-lg font-semibold ${plan.popular ? 'text-white/70' : 'text-gray-500'}`}>
                    {defaultCountry.symbol}
                  </span>
                  <span class={`billing-period text-sm font-semibold leading-6 tracking-wide ${plan.popular ? 'text-white/70' : 'text-gray-500'}`}>
                    /شهر
                  </span>
                </div>

                <p class={`billing-note text-xs leading-5 mt-1 ${plan.popular ? 'text-white/70' : 'text-gray-500'}`}>
                  فوترة شهرية
                </p>

                <ul class="mt-5 gap-2 flex flex-col">
                  {plan.features.map((feature) => (
                    <li class="flex items-start gap-2">
                      <svg class={`h-4 w-4 mt-1 flex-shrink-0 ${plan.popular ? 'text-white' : 'text-primary'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <span class={`text-right text-sm ${plan.popular ? 'text-white/90' : 'text-gray-600'}`}>{feature}</span>
                    </li>
                  ))}
                </ul>

                <hr class={`w-full my-4 ${plan.popular ? 'border-white/20' : 'border-gray-200'}`} />

                <a
                  href={`${URLS.app}/register/vendor${plan.tier !== 'free' ? `?plan=${plan.id}` : ''}`}
                  class={`group relative w-full gap-2 overflow-hidden text-lg font-semibold tracking-tighter transition-all duration-200 ease-out hover:ring-2 hover:ring-offset-1 py-3 rounded-md text-center block ${
                    plan.popular
                      ? 'bg-white text-[#271060] hover:bg-white/90 hover:ring-white'
                      : 'bg-white border border-gray-200 text-gray-900 hover:bg-primary hover:text-white hover:ring-primary hover:border-primary'
                  }`}
                >
                  {plan.cta}
                </a>
                <p class={`mt-6 text-xs leading-5 ${plan.popular ? 'text-white/70' : 'text-gray-500'}`}>
                  {plan.description}
                </p>
              </div>
            </div>
          ))}
        </div>

        <!-- Features list below pricing cards -->
        <div class="mt-12 flex flex-wrap justify-center gap-4 text-sm text-gray-500">
          {features.map((feature) => (
            <div class="flex items-center gap-2">
              <svg class="h-4 w-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>{feature}</span>
            </div>
          ))}
          <div class="flex items-center gap-2">
            <svg class="h-4 w-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>{t('pricing.features.regional')}</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Free First Month Section -->
    <section class="py-20 bg-gradient-to-br from-purple-100 via-white to-purple-50 relative overflow-hidden">
      <!-- Decorative background pattern -->
      <div class="absolute inset-0 opacity-30">
        <div class="absolute top-0 right-0 w-64 h-64 bg-purple-200 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-96 h-96 bg-purple-100 rounded-full blur-3xl"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <span class="inline-block mb-4 px-4 py-2 bg-purple-100 text-primary rounded-full text-sm font-medium">
              {t('pricing.free_month.badge')}
            </span>
            <h2 class="text-4xl md:text-5xl font-extrabold mb-4 text-gray-900">
              {t('pricing.free_month.title')} <span class="text-primary">{t('pricing.free_month.highlight')}</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              {t('pricing.free_month.desc')}
            </p>
          </div>

          <div class="grid md:grid-cols-3 gap-6 mb-12">
            <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow">
              <div class="h-12 w-12 rounded-lg bg-purple-100 flex items-center justify-center mb-4">
                <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2 text-gray-900">
                {t('pricing.free_month.feature1.title')}
              </h3>
              <p class="text-gray-600">
                {t('pricing.free_month.feature1.desc')}
              </p>
            </div>

            <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow">
              <div class="h-12 w-12 rounded-lg bg-purple-100 flex items-center justify-center mb-4">
                <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2 text-gray-900">
                {t('pricing.free_month.feature2.title')}
              </h3>
              <p class="text-gray-600">
                {t('pricing.free_month.feature2.desc')}
              </p>
            </div>

            <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow">
              <div class="h-12 w-12 rounded-lg bg-purple-100 flex items-center justify-center mb-4">
                <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2 text-gray-900">
                {t('pricing.free_month.feature3.title')}
              </h3>
              <p class="text-gray-600">
                {t('pricing.free_month.feature3.desc')}
              </p>
            </div>
          </div>

          <div class="bg-white border-2 border-purple-200 rounded-2xl p-8 md:p-12 text-center shadow-xl">
            <h3 class="text-2xl md:text-3xl font-bold mb-4 text-gray-900">
              {t('pricing.free_month.cta.title')}
            </h3>
            <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
              {t('pricing.free_month.cta.desc')}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
              <a href={`${URLS.app}/register/vendor`} class="inline-flex items-center gap-2 bg-primary text-white px-8 py-4 rounded-md text-lg font-semibold hover:bg-primary-light transition-colors">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                {t('pricing.free_month.cta.btn')}
              </a>
              <a href="/ar/contact" class="bg-white text-primary border-2 border-primary px-8 py-4 rounded-md text-lg font-semibold hover:bg-purple-50 transition-colors">
                {t('pricing.free_month.cta.contact')}
              </a>
            </div>
            <div class="mt-6 flex flex-wrap justify-center gap-4 text-sm text-gray-500">
              <div class="flex items-center gap-1">
                <svg class="h-4 w-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>{t('pricing.free_month.benefit1')}</span>
              </div>
              <div class="flex items-center gap-1">
                <svg class="h-4 w-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>{t('pricing.free_month.benefit2')}</span>
              </div>
              <div class="flex items-center gap-1">
                <svg class="h-4 w-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>{t('pricing.free_month.benefit3')}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  const pricing: Record<string, Record<string, { monthly: number; yearly: number }>> = {
    AED: { free: { monthly: 0, yearly: 0 }, basic: { monthly: 499, yearly: 4999 }, standard: { monthly: 999, yearly: 9999 }, premium: { monthly: 1499, yearly: 14999 } },
    SAR: { free: { monthly: 0, yearly: 0 }, basic: { monthly: 499, yearly: 4999 }, standard: { monthly: 999, yearly: 9999 }, premium: { monthly: 1499, yearly: 14999 } },
    QAR: { free: { monthly: 0, yearly: 0 }, basic: { monthly: 499, yearly: 4999 }, standard: { monthly: 999, yearly: 9999 }, premium: { monthly: 1499, yearly: 14999 } },
    KWD: { free: { monthly: 0, yearly: 0 }, basic: { monthly: 49, yearly: 499 }, standard: { monthly: 99, yearly: 999 }, premium: { monthly: 149, yearly: 1499 } },
    BHD: { free: { monthly: 0, yearly: 0 }, basic: { monthly: 49, yearly: 499 }, standard: { monthly: 99, yearly: 999 }, premium: { monthly: 149, yearly: 1499 } },
    OMR: { free: { monthly: 0, yearly: 0 }, basic: { monthly: 49, yearly: 499 }, standard: { monthly: 99, yearly: 999 }, premium: { monthly: 149, yearly: 1499 } },
  };

  const symbols: Record<string, string> = {
    AED: 'د.إ', SAR: 'ر.س', QAR: 'ر.ق', KWD: 'د.ك', BHD: 'د.ب', OMR: 'ر.ع'
  };

  let isYearly = false;
  let currentCurrency = 'AED';

  const countrySelect = document.getElementById('countrySelect') as HTMLSelectElement;
  const billingToggle = document.getElementById('billingToggle') as HTMLInputElement;
  const priceElements = document.querySelectorAll('.price');
  const symbolElements = document.querySelectorAll('.currency-symbol');
  const billingPeriods = document.querySelectorAll('.billing-period');
  const billingNotes = document.querySelectorAll('.billing-note');

  function updatePrices() {
    const prices = pricing[currentCurrency];
    const symbol = symbols[currentCurrency] || currentCurrency;

    priceElements.forEach((el) => {
      const plan = (el as HTMLElement).dataset.plan;
      if (plan && prices[plan]) {
        const price = isYearly ? prices[plan].yearly : prices[plan].monthly;
        el.textContent = price.toLocaleString('ar-SA');
      }
    });

    symbolElements.forEach((el) => {
      el.textContent = symbol;
    });

    billingPeriods.forEach((el) => {
      el.textContent = isYearly ? '/سنة' : '/شهر';
    });

    billingNotes.forEach((el) => {
      if (isYearly) {
        el.textContent = 'فوترة سنوية (وفر ~17%)';
      } else {
        el.textContent = 'فوترة شهرية';
      }
    });
  }

  countrySelect?.addEventListener('change', (e) => {
    currentCurrency = (e.target as HTMLSelectElement).value;
    updatePrices();
  });

  billingToggle?.addEventListener('change', (e) => {
    isYearly = (e.target as HTMLInputElement).checked;
    updatePrices();
  });
</script>
