---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { useTranslations } from '../i18n/utils';
import { URLS } from '../config/urls';

const t = useTranslations('en');
---

<BaseLayout
  title="Oyifa - Outsource Your Innovation From Anywhere"
  description="Oyifa connects businesses with IT service providers across the GCC. Post tenders, receive proposals, and find the perfect match for your IT requirements."
  schemaType="homepage"
>
  <Header />

  <main class="flex-1">
    <!-- Section 1: Hero - Introducing Oyifa Movement -->
    <section class="relative overflow-hidden bg-gradient-to-br from-primary/5 via-white to-secondary/5 py-16 md:py-24 lg:py-32">
      <!-- Background decorative elements -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-40 -right-40 h-80 w-80 rounded-full bg-primary/10 blur-3xl"></div>
        <div class="absolute -bottom-40 -left-40 h-80 w-80 rounded-full bg-secondary/10 blur-3xl"></div>
      </div>

      <div class="container relative mx-auto px-4 max-w-7xl">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <!-- Left side - Content -->
          <div class="order-2 lg:order-1 text-center lg:text-start">
            <span class="inline-flex mb-6 px-4 py-2 bg-secondary/10 text-primary rounded-full text-sm font-medium">
              {t('index.hero.badge')}
            </span>

            <h1 class="mb-6 text-4xl font-extrabold tracking-tight sm:text-5xl lg:text-6xl text-gray-900">
              {t('index.hero.title.part1')}{" "}
              <span class="text-primary relative">
                {t('index.hero.title.highlight')}
                <svg class="absolute -bottom-2 left-0 w-full h-3 text-primary/30" viewBox="0 0 200 12" preserveAspectRatio="none">
                  <path d="M0,8 Q50,0 100,8 T200,8" fill="none" stroke="currentColor" stroke-width="4" stroke-linecap="round"/>
                </svg>
              </span>
            </h1>

            <p class="mb-6 text-lg sm:text-xl text-gray-600 max-w-xl mx-auto lg:mx-0">
              {t('index.hero.subtitle')}
            </p>

            <div class="mb-8 space-y-3 text-base text-gray-500 max-w-xl mx-auto lg:mx-0">
              <p class="flex items-start gap-2 justify-center lg:justify-start">
                <span class="text-primary mt-1">&#10022;</span>
                {t('index.hero.inspiration')}
              </p>
              <p class="flex items-start gap-2 justify-center lg:justify-start">
                <span class="text-primary mt-1">&#10022;</span>
                {t('index.hero.mission')}
              </p>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
              <a href={`${URLS.app}/register/client`} class="btn btn-primary btn-lg shadow-lg hover:shadow-xl transition-all">
                {t('index.hero.cta.client')}
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
              <a href={`${URLS.app}/register/vendor`} class="btn btn-outline btn-lg hover:bg-secondary/10 transition-all">
                {t('index.hero.cta.vendor')}
              </a>
            </div>
          </div>

          <!-- Right side - Video -->
          <div class="order-1 lg:order-2">
            <div class="relative">
              <!-- Video container with decorative frame -->
              <div class="relative rounded-2xl overflow-hidden shadow-2xl border border-gray-200/50 bg-white">
                <!-- Decorative corner accents -->
                <div class="absolute top-0 left-0 w-20 h-20 border-l-4 border-t-4 border-primary/30 rounded-tl-2xl -translate-x-2 -translate-y-2 pointer-events-none"></div>
                <div class="absolute bottom-0 right-0 w-20 h-20 border-r-4 border-b-4 border-primary/30 rounded-br-2xl translate-x-2 translate-y-2 pointer-events-none"></div>

                <!-- YouTube Video with click overlay -->
                <div class="aspect-video bg-gradient-to-br from-primary/5 to-secondary/5 relative group">
                  <!-- Video thumbnail/poster -->
                  <img
                    src="https://img.youtube.com/vi/PBEse58Fz7s/maxresdefault.jpg"
                    alt="Oyifa Demo Video"
                    class="w-full h-full object-cover"
                  />
                  <!-- Click overlay -->
                  <a
                    href="https://www.youtube.com/watch?v=PBEse58Fz7s"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="absolute inset-0 flex items-center justify-center bg-black/40 hover:bg-black/50 transition-all cursor-pointer"
                  >
                    <div class="text-center">
                      <!-- Play button -->
                      <div class="w-20 h-20 bg-primary rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg group-hover:scale-110 transition-transform">
                        <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M8 5v14l11-7z" />
                        </svg>
                      </div>
                      <span class="text-white font-semibold text-lg drop-shadow-lg">
                        Click to view Demo
                      </span>
                    </div>
                  </a>
                </div>
              </div>

              <!-- Floating stats card -->
              <div class="absolute -bottom-6 -left-6 bg-white rounded-xl shadow-lg border border-gray-200/50 p-4 hidden sm:block">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center">
                    <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-gray-900">Trusted IT Tender Platform</p>
                    <p class="text-sm text-gray-500">Tailored for GCC</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Section 2: The Problem - Broken IT Procurement Process -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="text-center mb-16">
          <span class="inline-block mb-4 px-4 py-2 border border-gray-300 text-gray-600 rounded-full text-sm font-medium">
            {t('index.problem.badge')}
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900">
            {t('index.problem.title')}
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            {t('index.problem.subtitle')}
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          <!-- Endless Sales Calls -->
          <div class="card text-center p-6">
            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3 text-gray-900">{t('index.problem.sales.title')}</h3>
            <p class="text-gray-600">{t('index.problem.sales.desc')}</p>
          </div>

          <!-- Irrelevant Pitches -->
          <div class="card text-center p-6">
            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3 text-gray-900">{t('index.problem.pitches.title')}</h3>
            <p class="text-gray-600">{t('index.problem.pitches.desc')}</p>
          </div>

          <!-- Pressure Tactics -->
          <div class="card text-center p-6">
            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3 text-gray-900">{t('index.problem.pressure.title')}</h3>
            <p class="text-gray-600">{t('index.problem.pressure.desc')}</p>
          </div>
        </div>

        <div class="text-center mt-12">
          <p class="text-lg font-medium text-primary">
            {t('index.problem.conclusion')}
          </p>
        </div>
      </div>
    </section>

    <!-- Section 3: The Solution - How Oyifa Fixes This -->
    <section class="bg-primary/5 py-20">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="text-center mb-16">
          <span class="inline-block mb-4 px-4 py-2 border border-gray-300 text-gray-600 rounded-full text-sm font-medium">
            {t('index.solution.badge')}
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900">
            {t('index.solution.title')}
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            {t('index.solution.subtitle')}
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
          <div class="space-y-6">
            <!-- Rigorous Vetting -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-2 text-gray-900">{t('index.solution.vetting.title')}</h3>
                <p class="text-gray-600">{t('index.solution.vetting.desc')}</p>
              </div>
            </div>

            <!-- Prioritizing Local Talent -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-2 text-gray-900">{t('index.solution.local.title')}</h3>
                <p class="text-gray-600">{t('index.solution.local.desc')}</p>
              </div>
            </div>

            <!-- Secure Data Practices -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-2 text-gray-900">{t('index.solution.secure.title')}</h3>
                <p class="text-gray-600">{t('index.solution.secure.desc')}</p>
              </div>
            </div>
          </div>

          <div class="relative">
            <div class="bg-gradient-to-br from-primary/20 to-secondary/20 rounded-2xl p-8 h-96 flex items-center justify-center">
              <div class="text-center">
                <div class="w-24 h-24 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-12 h-12 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                  </svg>
                </div>
                <h4 class="font-semibold text-lg mb-2 text-gray-900">{t('index.solution.commitment.title')}</h4>
                <p class="text-gray-600">{t('index.solution.commitment.desc')}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Section 4: Our Values - Regional Strength, Honesty, Simplicity -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="text-center mb-16">
          <span class="inline-block mb-4 px-4 py-2 border border-gray-300 text-gray-600 rounded-full text-sm font-medium">
            {t('index.values.badge')}
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900">
            {t('index.values.title')}
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            {t('index.values.subtitle')}
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          <!-- Honesty -->
          <div class="card text-center p-6 hover:shadow-xl transition-shadow">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3 text-gray-900">{t('index.values.honesty.title')}</h3>
            <p class="text-gray-600">{t('index.values.honesty.desc')}</p>
          </div>

          <!-- Simplicity -->
          <div class="card text-center p-6 hover:shadow-xl transition-shadow">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3 text-gray-900">{t('index.values.simplicity.title')}</h3>
            <p class="text-gray-600">{t('index.values.simplicity.desc')}</p>
          </div>

          <!-- Regional Strength -->
          <div class="card text-center p-6 hover:shadow-xl transition-shadow">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3 text-gray-900">{t('index.values.regional.title')}</h3>
            <p class="text-gray-600">{t('index.values.regional.desc')}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Section 5: Call-to-Action - Join the Movement -->
    <section class="bg-gradient-to-r from-primary/10 to-secondary/10 py-20">
      <div class="container mx-auto px-4 max-w-7xl text-center">
        <span class="inline-flex mb-6 px-4 py-2 bg-secondary/10 text-primary rounded-full text-sm font-medium">
          {t('index.cta.badge')}
        </span>
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900">
          {t('index.cta.title')}
        </h2>
        <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
          {t('index.cta.subtitle')}
        </p>

        <div class="grid md:grid-cols-2 gap-6 max-w-2xl mx-auto mb-8">
          <div class="flex items-center justify-center gap-3 p-4 bg-white/80 rounded-lg">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="font-medium text-gray-900">{t('index.cta.verified')}</span>
          </div>
          <div class="flex items-center justify-center gap-3 p-4 bg-white/80 rounded-lg">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="font-medium text-gray-900">{t('index.cta.regional')}</span>
          </div>
          <div class="flex items-center justify-center gap-3 p-4 bg-white/80 rounded-lg">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="font-medium text-gray-900">{t('index.cta.transparent')}</span>
          </div>
          <div class="flex items-center justify-center gap-3 p-4 bg-white/80 rounded-lg">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="font-medium text-gray-900">{t('index.cta.secure')}</span>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={`${URLS.app}/register/client`} class="btn btn-primary btn-lg">
            {t('index.cta.client_btn')}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a href={`${URLS.app}/register/vendor`} class="btn btn-outline btn-lg">
            {t('index.cta.vendor_btn')}
          </a>
        </div>

        <p class="text-sm text-gray-500 mt-6">
          {t('index.cta.footer')}
        </p>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
