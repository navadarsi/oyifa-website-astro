---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { useTranslations } from '../i18n/utils';
import { URLS } from '../config/urls';

const t = useTranslations('en');
---

<BaseLayout
  title={t('refund.meta.title')}
  description={t('refund.meta.desc')}
>
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary/10 via-white to-purple-50 py-32">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <span class="inline-block mb-4 px-3 py-1 bg-purple-100 text-primary rounded-full text-sm font-medium">
          {t('refund.hero.badge')}
        </span>
        <h1 class="mb-6 text-5xl md:text-6xl font-extrabold tracking-tight text-gray-900">
          {t('refund.hero.title')}
        </h1>
        <p class="mx-auto mb-8 max-w-3xl text-xl text-gray-600">
          {t('refund.hero.subtitle')}
        </p>
        <p class="text-sm text-gray-500">
          {t('refund.hero.updated')}
        </p>
      </div>
    </section>

    <!-- Main Policy Section -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <!-- General Refund Policy Card -->
          <div class="bg-white rounded-md border border-gray-200 shadow-sm mb-12">
            <div class="pt-6 px-6 pb-6">
              <div class="flex items-start gap-4 mb-6">
                <div class="w-12 h-12 bg-primary/10 rounded-md flex items-center justify-center flex-shrink-0">
                  <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                  </svg>
                </div>
                <div>
                  <h2 class="text-2xl font-bold mb-3 text-gray-900">
                    {t('refund.general.title')}
                  </h2>
                  <p class="text-lg text-gray-600 mb-4">
                    {t('refund.general.desc')}
                  </p>
                  <div class="bg-amber-50 border border-amber-200 rounded-md p-4">
                    <p class="font-semibold text-amber-900">
                      {t('refund.general.important')}
                    </p>
                    <p class="text-amber-800 mt-2">
                      {t('refund.general.policy')}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Subscription Terms Card -->
          <div class="bg-white rounded-md border border-gray-200 shadow-sm mb-12">
            <div class="pt-6 px-6 pb-6">
              <h3 class="text-xl font-semibold mb-4 text-gray-900">
                {t('refund.subscription.title')}
              </h3>
              <ul class="space-y-3 text-gray-600">
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.subscription.term1')}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.subscription.term2')}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.subscription.term3')}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.subscription.term4')}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.subscription.term5')}</span>
                </li>
              </ul>
            </div>
          </div>

          <!-- Exceptional Circumstances Card -->
          <div class="bg-white rounded-md border border-gray-200 shadow-sm mb-12">
            <div class="pt-6 px-6 pb-6">
              <h3 class="text-xl font-semibold mb-4 text-gray-900">
                {t('refund.exceptions.title')}
              </h3>
              <p class="text-gray-600 mb-4">
                {t('refund.exceptions.desc')}
              </p>
              <ul class="space-y-3 text-gray-600">
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.exceptions.case1')}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.exceptions.case2')}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.exceptions.case3')}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.exceptions.case4')}</span>
                </li>
              </ul>
            </div>
          </div>

          <!-- How to Request Card -->
          <div class="bg-white rounded-md border border-gray-200 shadow-sm mb-12">
            <div class="pt-6 px-6 pb-6">
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-primary/10 rounded-md flex items-center justify-center flex-shrink-0">
                  <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="text-xl font-semibold mb-4 text-gray-900">
                    {t('refund.request.title')}
                  </h3>
                  <p class="text-gray-600 mb-4">
                    {t('refund.request.desc')}
                  </p>
                  <ul class="space-y-3 text-gray-600 mb-6">
                    <li class="flex items-start gap-3">
                      <span class="text-primary mt-1">1.</span>
                      <span>{t('refund.request.info1')}</span>
                    </li>
                    <li class="flex items-start gap-3">
                      <span class="text-primary mt-1">2.</span>
                      <span>{t('refund.request.info2')}</span>
                    </li>
                    <li class="flex items-start gap-3">
                      <span class="text-primary mt-1">3.</span>
                      <span>{t('refund.request.info3')}</span>
                    </li>
                    <li class="flex items-start gap-3">
                      <span class="text-primary mt-1">4.</span>
                      <span>{t('refund.request.info4')}</span>
                    </li>
                  </ul>

                  <div class="grid md:grid-cols-2 gap-4">
                    <div class="bg-purple-50 rounded-md border border-gray-200 p-4">
                      <div class="flex items-center gap-3 mb-2">
                        <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <h4 class="font-semibold text-gray-900">
                          {t('refund.request.email_title')}
                        </h4>
                      </div>
                      <p class="text-sm text-gray-600">
                        info@oyifa.com
                      </p>
                    </div>
                    <div class="bg-purple-50 rounded-md border border-gray-200 p-4">
                      <div class="flex items-center gap-3 mb-2">
                        <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        <h4 class="font-semibold text-gray-900">
                          {t('refund.request.phone_title')}
                        </h4>
                      </div>
                      <p class="text-sm text-gray-600">
                        +971 52 476 7569
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Refund Processing Card -->
          <div class="bg-white rounded-md border border-gray-200 shadow-sm mb-12">
            <div class="pt-6 px-6 pb-6">
              <h3 class="text-xl font-semibold mb-4 text-gray-900">
                {t('refund.processing.title')}
              </h3>
              <ul class="space-y-3 text-gray-600">
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.processing.review')}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.processing.decision')}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.processing.approval')}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.processing.method')}</span>
                </li>
              </ul>
            </div>
          </div>

          <!-- Additional Terms Card -->
          <div class="bg-white rounded-md border border-gray-200 shadow-sm">
            <div class="pt-6 px-6 pb-6">
              <h3 class="text-xl font-semibold mb-4 text-gray-900">
                {t('refund.additional.title')}
              </h3>
              <ul class="space-y-3 text-gray-600">
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.additional.term1')}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.additional.term2')}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.additional.term3')}</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="text-primary mt-1">•</span>
                  <span>{t('refund.additional.term4')}</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gradient-to-r from-primary/10 to-purple-50 py-20">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900">
          {t('refund.cta.title')}
        </h2>
        <p class="mx-auto mb-8 max-w-2xl text-xl text-gray-600">
          {t('refund.cta.desc')}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href="/contact" class="inline-flex items-center justify-center gap-2 bg-primary text-white px-6 py-3 rounded-md text-base font-semibold hover:bg-primary-light transition-colors">
            {t('refund.cta.contact')}
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
          <a href="/pricing" class="inline-flex items-center justify-center bg-white text-primary border border-gray-200 px-6 py-3 rounded-md text-base font-semibold hover:bg-gray-50 transition-colors">
            {t('refund.cta.plans')}
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
